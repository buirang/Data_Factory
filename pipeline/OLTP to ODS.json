{
	"name": "OLTP to ODS",
	"properties": {
		"activities": [
			{
				"name": "CreateNewpipeline",
				"type": "ForEach",
				"dependsOn": [],
				"userProperties": [],
				"typeProperties": {
					"items": {
						"value": "@pipeline().parameters.cw_items",
						"type": "Expression"
					},
					"activities": [
						{
							"name": "OLTP",
							"type": "Copy",
							"dependsOn": [],
							"policy": {
								"timeout": "0.12:00:00",
								"retry": 0,
								"retryIntervalInSeconds": 30,
								"secureOutput": false,
								"secureInput": false
							},
							"userProperties": [
								{
									"name": "Source",
									"value": "@{item().source.schema}.@{item().source.table}"
								},
								{
									"name": "Destination",
									"value": "newcontainer//@{item().destination.fileName}"
								}
							],
							"typeProperties": {
								"source": {
									"type": "DelimitedTextSource",
									"storeSettings": {
										"type": "AzureBlobStorageReadSettings",
										"recursive": true,
										"enablePartitionDiscovery": false
									},
									"formatSettings": {
										"type": "DelimitedTextReadSettings"
									}
								},
								"sink": {
									"type": "DelimitedTextSink",
									"storeSettings": {
										"type": "AzureBlobStorageWriteSettings"
									},
									"formatSettings": {
										"type": "DelimitedTextWriteSettings",
										"quoteAllText": true,
										"fileExtension": ".txt"
									}
								},
								"enableStaging": false,
								"validateDataConsistency": false
							},
							"inputs": [
								{
									"referenceName": "DestinationDataset_x6i",
									"type": "DatasetReference",
									"parameters": {
										"cw_fileName": {
											"value": "@pipeline().TriggerId",
											"type": "Expression"
										}
									}
								}
							],
							"outputs": [
								{
									"referenceName": "DestinationDataset_x6i",
									"type": "DatasetReference",
									"parameters": {
										"cw_fileName": {
											"value": "@pipeline().GroupId",
											"type": "Expression"
										}
									}
								}
							]
						},
						{
							"name": "ODS",
							"type": "Copy",
							"dependsOn": [
								{
									"activity": "OLTP",
									"dependencyConditions": [
										"Succeeded"
									]
								}
							],
							"policy": {
								"timeout": "0.12:00:00",
								"retry": 0,
								"retryIntervalInSeconds": 30,
								"secureOutput": false,
								"secureInput": false
							},
							"userProperties": [],
							"typeProperties": {
								"source": {
									"type": "DelimitedTextSource",
									"storeSettings": {
										"type": "AzureBlobStorageReadSettings",
										"recursive": true,
										"enablePartitionDiscovery": false
									},
									"formatSettings": {
										"type": "DelimitedTextReadSettings"
									}
								},
								"sink": {
									"type": "AzureSqlSink",
									"writeBehavior": "insert",
									"sqlWriterUseTableLock": false
								},
								"enableStaging": false,
								"translator": {
									"type": "TabularTranslator",
									"typeConversion": true,
									"typeConversionSettings": {
										"allowDataTruncation": true,
										"treatBooleanAsNumber": false
									}
								}
							},
							"inputs": [
								{
									"referenceName": "DestinationDataset_wxl",
									"type": "DatasetReference",
									"parameters": {
										"cw_fileName": {
											"value": "@pipeline().parameters.cw_items",
											"type": "Expression"
										}
									}
								}
							],
							"outputs": [
								{
									"referenceName": "SourceDataset_wxl",
									"type": "DatasetReference",
									"parameters": {
										"cw_schema": {
											"value": "@activity('OLTP').output",
											"type": "Expression"
										},
										"cw_table": {
											"value": "@activity('OLTP').output.pipelineReturnValue",
											"type": "Expression"
										}
									}
								}
							]
						}
					]
				}
			}
		],
		"parameters": {
			"cw_items": {
				"type": "Array",
				"defaultValue": [
					{
						"source": {
							"schema": "Application",
							"table": "People"
						},
						"destination": {
							"fileName": "ApplicationPeople.txt"
						}
					},
					{
						"source": {
							"schema": "Sales",
							"table": "Customers"
						},
						"destination": {
							"fileName": "SalesCustomers.txt"
						}
					},
					{
						"source": {
							"schema": "Sales",
							"table": "Invoices"
						},
						"destination": {
							"fileName": "SalesInvoices.txt"
						}
					},
					{
						"source": {
							"schema": "Sales",
							"table": "OrderLines"
						},
						"destination": {
							"fileName": "SalesOrderLines.txt"
						}
					},
					{
						"source": {
							"schema": "Sales",
							"table": "Orders"
						},
						"destination": {
							"fileName": "SalesOrders.txt"
						}
					},
					{
						"source": {
							"schema": "Warehouse",
							"table": "PackageTypes"
						},
						"destination": {
							"fileName": "WarehousePackageTypes.txt"
						}
					},
					{
						"source": {
							"schema": "Warehouse",
							"table": "StockItems"
						},
						"destination": {
							"fileName": "WarehouseStockItems.txt"
						}
					}
				]
			}
		},
		"annotations": [],
		"lastPublishTime": "2022-12-07T03:56:00Z"
	},
	"type": "Microsoft.DataFactory/factories/pipelines"
}